<%= link_to "Mi Blog", controller: "posts" %>

<h1>Mis Posts</h1>
<table>
<tr>
	<th>Titulo</th>
	<th>Texto</th>
	<th></th>
	<th></th>
	<th></th>
</tr>

	<% @post.each do |post| %>
	<tr>
	<td><%= post.title %></td>
	<td><%= post.text %></td>
	<td><%= link_to 'Show', post_path(post) %></td>
	<td><%= link_to 'Edit', edit_post_path(post) %></td>
	<td><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: '¿Estás seguro?'} %></td>
	</tr>
	<% end %>
</table>

	<%= link_to 'nuevo post', new_post_path %>
	