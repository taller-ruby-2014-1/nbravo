<p>
	<strong>Title:</strong>
	<%= @post.title %>
</p>

<p>
<strong>Text:</strong>
<%= @post.text %>
</p>



<h2>Comments</h2>
<%= render @post.comments %>

<h2>Agregar un comentario:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
<%= f.label :commenter %><br />
<%= f.text_field :commenter %>
</p>
<p>
<%= f.label :body %><br />
<%= f.text_area :body %>
</p>
<p>
<%= f.submit %>
</p>

<% end %>


<%= link_to 'back',posts_path %>